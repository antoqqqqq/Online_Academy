<h2>Create New Course</h2>
<form action="/courses/new" method="post">
    <div>
        <label for="title">Title</label>
        <input id="title" name="title" required />
    </div>
    <div>
        <label for="description">Short Description</label>
        <textarea id="description" name="description"></textarea>
    </div>
    <div>
        <label for="image_url">Image URL</label>
        <input id="image_url" name="image_url" />
    </div>
    <div>
        <label for="level">Level</label>
        <select id="level" name="level">
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
        </select>
    </div>
    <div>
        <label for="current_price">Current Price</label>
        <input id="current_price" name="current_price" type="number" step="0.01" required />
    </div>
    <div>
        <label for="original_price">Original Price</label>
        <input id="original_price" name="original_price" type="number" step="0.01" />
    </div>
    <div>
        <label for="category_id">Category ID</label>
        <input id="category_id" name="category_id" type="number" />
    </div>
    <button type="submit">Create Course</button>
</form>