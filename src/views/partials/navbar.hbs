<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Online Academy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link item" href="/">Trang Chủ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Khóa Học
                        </a>
                        <ul class="dropdown-menu">
                            {{#each categories}}
                            <li class="dropdown-submenu">
                                <a class="dropdown-item " href="/category/{{this.slug}}" data-bs-toggle="">
                                    {{this.name}}
                                </a>
                                <ul class="dropdown-menu ">
                                    {{#each this.subCategories}}
                                    <li><a class="dropdown-item"
                                            href="/category/{{../slug}}/{{this.slug}}">{{this.category_name}}</a></li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/courses">Tất Cả Khóa Học</a></li>
                        </ul>
