

<div class="course-card">
    <div class="course-image">
        <img src="{{this.image_url}}" class="card-img-top" alt="{{this.title}}"
            style="height: 200px; object-fit: cover;">
    </div>
    <div class="course-body">
        <h6 class="course-title">{{this.title}}</h6>

        <p class="course-instructor">
            <i class="fas fa-user"></i> {{this.instructor_name}}
        </p>
        <p class="course-category">
            <i class="fas fa-book"></i> {{this.category_name}}
        </p>
        <div class="course-rating">
            <i class="fas fa-star"></i>
            <strong>{{this.rating}} rating</strong>
            <span class="text-muted">({{total_reviews}} đánh giá)</span>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                {{#if this.is_onsale}}
                <span class="text-decoration-line-through text-muted">{{format_money this.original_price}}</span>
                <span class="text-primary fw-bold ms-2">{{format_money this.current_price}}</span>
                {{else}}
                <span class="text-primary fw-bold">{{format_money this.current_price}}</span>
                {{/if}}
            </div>
            <span class="badge bg-secondary">{{this.total_enrollment}}</span>
        </div>
        <div class="card-footer bg-transparent border-top-0">
            <a href="/courses/{{this.course_id}}" class="btn btn-outline-primary w-100">Xem chi tiết</a>
        </div>
    </div>
</div>