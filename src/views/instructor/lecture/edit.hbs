<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/instructor/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/{{course.course_id}}/lectures">Manage Lectures</a></li>
                    <li class="breadcrumb-item active">Edit Lecture</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="card-title mb-0">Edit Lecture: {{lecture.title}}</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/instructor/courses/{{course.course_id}}/lectures/{{lecture.id}}/edit">
                        <div class="mb-3">
                            <label for="title" class="form-label">Lecture Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{lecture.title}}" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Short Description</label>
                            <textarea class="form-control" id="description" name="description" rows="2">{{lecture.description}}</textarea>
                        </div>

                        <div class="mb-3">
                            <label for="full_description" class="form-label">Full Content</label>
                            <textarea class="form-control" id="full_description" name="full_description" rows="8">{{lecture.full_description.content}}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="video_url" class="form-label">Video URL</label>
                                <input type="url" class="form-control" id="video_url" name="video_url" value="{{lecture.video_url}}">
                                <div class="form-text">URL to the video file for this lecture</div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="time" class="form-label">Duration (minutes)</label>
                                <input type="number" class="form-control" id="time" name="time" min="0" step="1" value="{{lecture.time}}">
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check mt-4">
                                    <input class="form-check-input" type="checkbox" id="is_preview" name="is_preview" {{#if lecture.is_preview}}checked{{/if}}>
                                    <label class="form-check-label" for="is_preview">
                                        Free Preview
                                    </label>
                                </div>
                                <div class="form-text">Allow students to watch for free</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/instructor/courses/{{course.course_id}}/lectures" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Update Lecture
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>