<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Instructor Dashboard</h1>
        </div>
    </div>

    {{#if flash}}
    <div class="alert alert-{{flash.type}} alert-dismissible fade show" role="alert">
        {{flash.message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    <!-- Stats Cards -->
    <div class="row mb-5">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{stats.courseCount}}</h4>
                            <p class="card-text">Total Courses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{stats.studentCount}}</h4>
                            <p class="card-text">Total Students</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">${{stats.totalRevenue}}</h4>
                            <p class="card-text">Total Revenue</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Section -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>My Courses</h2>
                <a href="/instructor/courses/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create New Course
                </a>
            </div>

            {{#if courses.length}}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Students</th>
                            <th>Rating</th>
                            <th>Price</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                        <tr>
                            <td>
                                <strong>{{this.title}}</strong>
                                <br>
                                <small class="text-muted">{{this.category_name}}</small>
                            </td>
                            <td>
                                {{#if this.is_complete}}
                                <span class="badge bg-success">Complete</span>
                                {{else}}
                                <span class="badge bg-warning">Draft</span>
                                {{/if}}
                            </td>
                            <td>{{this.total_enrollment}}</td>
                            <td>
                                <i class="fas fa-star text-warning"></i>
                                {{this.rating}} ({{this.total_reviews}})
                            </td>
                            <td>
                                {{#if this.current_price}}
                                <span class="text-success fw-bold">${{this.current_price}}</span>
                                {{#if this.original_price}}
                                <small class="text-muted text-decoration-line-through">${{this.original_price}}</small>
                                {{/if}}
                                {{else}}
                                <span class="text-muted">Free</span>
                                {{/if}}
                            </td>
                            <td>{{formatDate this.latest_update}}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/courses/{{this.course_id}}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/instructor/courses/{{this.course_id}}/edit" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/instructor/courses/{{this.course_id}}/lectures" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-list"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="text-center py-5">
                <i class="fas fa-book fa-4x text-muted mb-3"></i>
                <h3>No Courses Yet</h3>
                <p class="text-muted">Create your first course to get started!</p>
                <a href="/instructor/courses/create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Create Your First Course
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.2s;
}

.card:hover {
    transform: translateY(-2px);
}

.table th {
    border-top: none;
}

.btn-group .btn {
    margin-right: 0.25rem;
}
</style>

{{#section 'js'}}
<script>
    // Auto-dismiss alerts after 5 seconds
    setTimeout(() => {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>
{{/section}}