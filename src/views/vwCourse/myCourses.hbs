{{!-- Trang "Khóa học của tôi" --}}
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-book"></i> Khóa học của tôi
                </h2>
                <span class="badge bg-primary fs-6">{{totalCourses}} khóa học</span>
            </div>

            {{#if courses.length}}
            <div class="row g-4">
                {{#each courses}}
                <div class="col-lg-4 col-md-6">
                    <div class="card course-card h-100">
                        <img src="{{this.image_url}}" class="card-img-top" alt="{{this.title}}" 
                             style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-chalkboard-teacher"></i> {{this.instructor_name}}
                            </p>
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-graduation-cap"></i> {{this.category_name}}
                            </p>

                            {{!-- Progress Bar --}}
                            <div class="progress-section mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small class="text-muted">Tiến độ học tập</small>
                                    <small class="fw-bold text-primary">{{this.progress.progressPercentage}}%</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: {{this.progress.progressPercentage}}%"
                                         aria-valuenow="{{this.progress.progressPercentage}}" 
                                         aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="text-muted">
                                    {{this.progress.completedLectures}}/{{this.progress.totalLectures}} chương đã hoàn thành
                                </small>
                            </div>

                            {{!-- Course Stats --}}
                            <div class="course-stats mb-3">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <i class="bi bi-play-circle text-primary"></i>
                                            <small class="d-block text-muted">{{this.progress.totalLectures}}</small>
                                            <small class="d-block fw-bold">Chương</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <i class="bi bi-check-circle text-success"></i>
                                            <small class="d-block text-muted">{{this.progress.completedLectures}}</small>
                                            <small class="d-block fw-bold">Hoàn thành</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <i class="bi bi-calendar text-info"></i>
                                            <small class="d-block text-muted">{{format_date this.enrolled_at}}</small>
                                            <small class="d-block fw-bold">Đăng ký</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-grid gap-2">
                                <a href="/enrollment/{{this.course_id}}/learn" class="btn btn-primary">
                                    <i class="bi bi-play-circle"></i> Tiếp tục học
                                </a>
                                <a href="/courses/{{this.course_id}}" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            {{!-- Pagination --}}
            {{#if pagination.totalPages}}
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    {{#if pagination.hasPrev}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{subtract pagination.currentPage 1}}">
                            <i class="bi bi-chevron-left"></i> Trước
                        </a>
                    </li>
                    {{/if}}

                    {{#times pagination.totalPages}}
                    <li class="page-item {{#if (eq this ../pagination.currentPage)}}active{{/if}}">
                        <a class="page-link" href="?page={{this}}">{{this}}</a>
                    </li>
                    {{/times}}

                    {{#if pagination.hasNext}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{add pagination.currentPage 1}}">
                            Tiếp <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
            {{/if}}

            {{else}}
            {{!-- Empty State --}}
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="bi bi-book display-1 text-muted mb-3"></i>
                    <h4 class="text-muted mb-3">Bạn chưa có khóa học nào</h4>
                    <p class="text-muted mb-4">
                        Hãy khám phá các khóa học thú vị và đăng ký để bắt đầu học tập!
                    </p>
                    <a href="/courses" class="btn btn-primary btn-lg">
                        <i class="bi bi-search"></i> Khám phá khóa học
                    </a>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
.course-card {
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid rgba(0, 0, 0, .125);
}

.course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.progress-section {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid #e9ecef;
}

.stat-item {
    padding: 0.5rem;
}

.stat-item i {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.empty-state {
    max-width: 400px;
    margin: 0 auto;
}

.pagination .page-link {
    color: #333;
    border-color: #dee2e6;
}

.pagination .page-item.active .page-link {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.pagination .page-link:hover {
    color: #0d6efd;
    background-color: #e9ecef;
    border-color: #dee2e6;
}
</style>
