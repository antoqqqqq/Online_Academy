{{!-- Chi tiết khóa học - Simple version để tránh conflict --}}
<div class="container py-4">
    <div class="row">
        {{!-- Cột bên trái - Thông tin khóa học --}}
        <div class="col-lg-8">
            {{!-- Ảnh đại diện --}}
            <div class="course-thumbnail mb-4">
                <img src="{{course.image_url}}" alt="{{course.title}}" class="img-fluid rounded shadow-sm w-100" 
                     style="max-height: 400px; object-fit: cover;">
            </div>

            {{!-- Thông tin cơ bản --}}
            <div class="course-info bg-white p-4 rounded shadow-sm mb-4">
                <h1 class="course-title mb-3">{{course.title}}</h1>
                
                {{!-- Lĩnh vực --}}
                <div class="mb-3">
                    <span class="badge bg-primary">{{course.category_name}}</span>
                </div>

                {{!-- Thông tin ngắn --}}
                <div class="d-flex align-items-center mb-3 text-muted">
                    <div class="me-4">
                        <i class="bi bi-star-fill text-warning"></i>
                        <strong>{{course.rating}}</strong>
                        <span class="ms-1">({{course.total_reviews}} đánh giá)</span>
                    </div>
                    <div class="me-4">
                        <i class="bi bi-people-fill"></i>
                        <span class="ms-1">{{course.total_enrollment}} học viên</span>
                    </div>
                    <div>
                        <i class="bi bi-clock-fill"></i>
                        <span class="ms-1">Cập nhật: {{course.latest_update}}</span>
                    </div>
                </div>

                {{!-- Mô tả ngắn --}}
                <div class="course-short-description mb-4">
                    <h5>Giới thiệu</h5>
                    <p class="text-muted">{{course.short_description}}</p>
                </div>

                {{!-- Mô tả chi tiết --}}
                <div class="course-description">
                    <h5>Nội dung khóa học</h5>
                    <p>{{course.description}}</p>
                </div>
            </div>

            {{!-- Thông tin giảng viên --}}
            <div class="instructor-info bg-white p-4 rounded shadow-sm mb-4">
                <h5 class="mb-3">
                    <i class="bi bi-person-circle"></i> Giảng viên
                </h5>
                <div class="d-flex align-items-center">
                    <div class="instructor-avatar me-3">
                        <i class="bi bi-person-circle fs-1 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">{{course.instructor_name}}</h6>
                        <small class="text-muted">Chuyên gia {{course.category_name}}</small>
                    </div>
                </div>
            </div>

            {{!-- Video lectures preview (nếu có) --}}
            {{#if course.videos}}
            <div class="course-videos bg-white p-4 rounded shadow-sm">
                <h5 class="mb-3">
                    <i class="bi bi-play-circle"></i> Nội dung bài học
                </h5>
                <div class="list-group">
                    {{#each course.videos}}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-play-btn text-primary me-2"></i>
                                <strong>{{this.video_title}}</strong>
                            </div>
                            <span class="badge bg-secondary">{{this.duration}} phút</span>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}

            {{!-- Đánh giá và phản hồi --}}
            <div class="course-feedback bg-white p-4 rounded shadow-sm mt-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="mb-0">
                        <i class="bi bi-star-fill text-warning"></i>
                        Đánh giá & Phản hồi
                    </h5>
                    {{#if isLoggedIn}}
                        {{#if isEnrolled}}
                            {{#if studentFeedback}}
                                <a href="/feedback/{{course.course_id}}" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Chỉnh sửa đánh giá
                                </a>
                            {{else}}
                                <a href="/feedback/{{course.course_id}}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-star"></i> Đánh giá khóa học
                                </a>
                            {{/if}}
                        {{else}}
                            <span class="text-muted small">
                                <i class="bi bi-info-circle"></i> Đăng ký học để đánh giá
                            </span>
                        {{/if}}
                    {{else}}
                        <a href="/account/signin" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để đánh giá
                        </a>
                    {{/if}}
                </div>

                {{!-- Thống kê đánh giá --}}
                {{#if ratingStats}}
                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        <div class="rating-summary">
                            <h2 class="text-primary mb-0">{{ratingStats.average_rating}}</h2>
                            <div class="stars mb-2">
                                {{#times (parseInt ratingStats.average_rating)}}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {{/times}}
                                {{#times (subtract 5 (parseInt ratingStats.average_rating))}}
                                    <i class="bi bi-star text-muted"></i>
                                {{/times}}
                            </div>
                            <small class="text-muted">{{ratingStats.total_reviews}} đánh giá</small>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="rating-breakdown">
                            {{#each ratingStats}}
                                {{#if (and (gte this 0) (lt @index 5))}}
                                <div class="d-flex align-items-center mb-2">
                                    <span class="me-2">{{subtract 5 @index}} sao</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                        <div class="progress-bar bg-warning" style="width: {{divide (multiply this 100) ../ratingStats.total_reviews}}%"></div>
                                    </div>
                                    <small class="text-muted">{{this}}</small>
                                </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}

                {{!-- Đánh giá của học viên hiện tại --}}
                {{#if studentFeedback}}
                <div class="my-feedback mb-4 p-3 bg-light rounded">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="mb-0">
                            <i class="bi bi-person-circle text-primary"></i>
                            Đánh giá của bạn
                        </h6>
                        <small class="text-muted">{{format_datetime studentFeedback.created_at}}</small>
                    </div>
                    <div class="stars mb-2">
                        {{#times studentFeedback.rating}}
                            <i class="bi bi-star-fill text-warning"></i>
                        {{/times}}
                        {{#times (subtract 5 studentFeedback.rating)}}
                            <i class="bi bi-star text-muted"></i>
                        {{/times}}
                    </div>
                    <p class="mb-0">{{studentFeedback.feedback}}</p>
                </div>
                {{/if}}

                {{!-- Danh sách đánh giá của học viên khác --}}
                {{#if courseFeedbacks}}
                <div class="feedbacks-list">
                    <h6 class="mb-3">Đánh giá từ học viên khác</h6>
                    {{#each courseFeedbacks}}
                        {{!-- Tạm thời hiển thị tất cả đánh giá để debug --}}
                        {{#unless (and ../studentFeedback (eq this.student ../studentFeedback.student))}}
                        <div class="feedback-item mb-3 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="student-avatar me-2">
                                        <i class="bi bi-person-circle text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <strong class="d-block">{{this.student_name}}</strong>
                                        <small class="text-muted">{{format_datetime this.created_at}}</small>
                                    </div>
                                </div>
                                <div class="stars">
                                    {{#times this.rating}}
                                        <i class="bi bi-star-fill text-warning"></i>
                                    {{/times}}
                                    {{#times (subtract 5 this.rating)}}
                                        <i class="bi bi-star text-muted"></i>
                                    {{/times}}
                                </div>
                            </div>
                            <p class="mb-0">{{this.feedback}}</p>
                        </div>
                        {{/unless}}
                    {{/each}}
                    
                    {{#if (gt ratingStats.total_reviews 5)}}
                    <div class="text-center mt-3">
                        <button class="btn btn-outline-primary btn-sm" onclick="loadMoreFeedbacks()">
                            <i class="bi bi-arrow-down"></i> Xem thêm đánh giá
                        </button>
                    </div>
                    {{/if}}
                </div>
                {{else}}
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-star text-muted fs-1"></i>
                    <p class="mt-2 mb-0">Chưa có đánh giá nào</p>
                </div>
                {{/if}}
            </div>
        </div>

        {{!-- Cột bên phải - Giá & Nút hành động --}}
        <div class="col-lg-4">
            <div class="course-sidebar bg-white p-4 rounded shadow sticky-top" style="top: 20px;">
                {{!-- Giá --}}
                <div class="course-price mb-4">
                    {{#if course.discount_price}}
                        <div class="d-flex align-items-center">
                            <h2 class="text-danger mb-0 me-3">{{format_money course.discount_price}}</h2>
                            <del class="text-muted">{{format_money course.current_price}}</del>
                        </div>
                        <div class="mt-2">
                            <span class="badge bg-danger">
                                Giảm {{subtract (divide (subtract course.current_price course.discount_price) course.current_price) 100}}%
                            </span>
                        </div>
                    {{else}}
                        <h2 class="text-primary mb-0">{{format_money course.current_price}}</h2>
                    {{/if}}
                </div>

                {{!-- Nút Watchlist - TÍNH NĂNG CHÍNH --}}
                {{#if isLoggedIn}}
                    <button id="btnWatchlist" class="btn btn-outline-danger w-100 mb-3" 
                            data-course-id="{{course.course_id}}"
                            data-in-watchlist="{{isInWatchlist}}">
                        <i class="bi {{#if isInWatchlist}}bi-heart-fill{{else}}bi-heart{{/if}}"></i>
                        <span id="watchlistText">
                            {{#if isInWatchlist}}
                                Đã thêm vào yêu thích
                            {{else}}
                                Thêm vào yêu thích
                            {{/if}}
                        </span>
                    </button>
                {{else}}
                    <a href="/account/signin" class="btn btn-outline-danger w-100 mb-3">
                        <i class="bi bi-heart"></i>
                        Đăng nhập để thêm vào yêu thích
                    </a>
                {{/if}}

                {{!-- Nút đăng ký học --}}
                {{#if isLoggedIn}}
                    {{#if isEnrolled}}
                        <a href="/courses/{{course.course_id}}/lecture/{{course.first_lecture_id}}" class="btn btn-success w-100 mb-3">
                            <i class="bi bi-play-circle"></i>
                            Tiếp tục học
                        </a>
                        <a href="/enrollment/my-courses" class="btn btn-outline-primary w-100 mb-3">
                            <i class="bi bi-list-ul"></i>
                            Khóa học của tôi
                        </a>
                    {{else}}
                        <button id="enrollBtn" class="btn btn-primary w-100 mb-3" 
                                data-course-id="{{course.course_id}}">
                            <i class="bi bi-cart-plus"></i>
                            Đăng ký học ngay
                        </button>
                    {{/if}}
                {{else}}
                <a href="/account/signin" class="btn btn-primary w-100 mb-3">
                    <i class="bi bi-cart-plus"></i>
                    Đăng nhập để đăng ký học
                </a>
                {{/if}}

                {{!-- Thông tin khóa học --}}
                <div class="course-features mt-4">
                    <h6 class="mb-3">Khóa học bao gồm:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Truy cập trọn đời
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Xem trên mọi thiết bị
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Chứng chỉ hoàn thành
                        </li>
                        {{#if course.videos}}
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            {{course.videos.length}} bài học video
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- JavaScript cho Watchlist và Enrollment --}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnWatchlist = document.getElementById('btnWatchlist');
    const enrollBtn = document.getElementById('enrollBtn');
    
    if (btnWatchlist) {
        btnWatchlist.addEventListener('click', async function() {
            const courseId = this.dataset.courseId;
            const isInWatchlist = this.dataset.inWatchlist === 'true';
            
            try {
                // Disable button
                btnWatchlist.disabled = true;
                
                // Gọi API
                const response = await fetch(`/courses/${courseId}/watchlist/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Update UI
                    const icon = btnWatchlist.querySelector('i');
                    const text = btnWatchlist.querySelector('#watchlistText');
                    
                    if (data.isInWatchlist) {
                        icon.className = 'bi bi-heart-fill';
                        text.textContent = 'Đã thêm vào yêu thích';
                        btnWatchlist.dataset.inWatchlist = 'true';
                    } else {
                        icon.className = 'bi bi-heart';
                        text.textContent = 'Thêm vào yêu thích';
                        btnWatchlist.dataset.inWatchlist = 'false';
                    }
                    
                    // Hiển thị thông báo
                    showToast(data.message, 'success');
                } else {
                    if (data.requireLogin) {
                        window.location.href = '/account/signin';
                    } else {
                        showToast(data.message, 'error');
                    }
                }
            } catch (error) {
                console.error('Lỗi:', error);
                showToast('Có lỗi xảy ra, vui lòng thử lại', 'error');
            } finally {
                btnWatchlist.disabled = false;
            }
        });
    }

    // Xử lý đăng ký khóa học
    if (enrollBtn) {
        enrollBtn.addEventListener('click', async function() {
            const courseId = this.dataset.courseId;
            
            try {
                // Disable button
                enrollBtn.disabled = true;
                enrollBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang xử lý...';
                
                // Gọi API đăng ký
                const response = await fetch(`/enrollment/${courseId}/enroll`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showToast(data.message, 'success');
                    
                    // Cập nhật UI
                    enrollBtn.innerHTML = '<i class="bi bi-check-circle"></i> Đã đăng ký';
                    enrollBtn.className = 'btn btn-success w-100 mb-3';
                    enrollBtn.disabled = true;
                    
                    // Thêm nút "Bắt đầu học"
                    const startLearningBtn = document.createElement('a');
                    startLearningBtn.href = `/enrollment/${courseId}/learn`;
                    startLearningBtn.className = 'btn btn-primary w-100 mb-3';
                    startLearningBtn.innerHTML = '<i class="bi bi-play-circle"></i> Bắt đầu học';
                    
                    enrollBtn.parentNode.insertBefore(startLearningBtn, enrollBtn.nextSibling);
                    
                } else {
                    if (data.requireLogin) {
                        showToast(data.message, 'error');
                        setTimeout(() => {
                            window.location.href = '/account/signin';
                        }, 1500);
                    } else {
                        showToast(data.message, 'error');
                    }
                }
            } catch (error) {
                console.error('Lỗi:', error);
                showToast('Có lỗi xảy ra, vui lòng thử lại', 'error');
            } finally {
                if (enrollBtn.disabled !== true) {
                    enrollBtn.disabled = false;
                    enrollBtn.innerHTML = '<i class="bi bi-cart-plus"></i> Đăng ký học ngay';
                }
            }
        });
    }
    
    // Hàm hiển thị toast notification
    function showToast(message, type = 'info') {
        // Tạo toast element
        const toast = document.createElement('div');
        toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 start-50 translate-middle-x mt-3`;
        toast.style.zIndex = '9999';
        toast.textContent = message;
        
        document.body.appendChild(toast);
        
        // Tự động xóa sau 3 giây
        setTimeout(() => {
            toast.remove();
        }, 3000);
    }

    // Hàm load thêm đánh giá
    window.loadMoreFeedbacks = async function() {
        try {
            const button = document.querySelector('[onclick="loadMoreFeedbacks()"]');
            if (button) {
                button.disabled = true;
                button.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang tải...';
            }

            const response = await fetch(`/feedback/{{course.course_id}}/list?page=2&limit=10`);
            const result = await response.json();

            if (result.success && result.data.feedbacks.length > 0) {
                // Thêm đánh giá mới vào DOM
                const feedbacksList = document.querySelector('.feedbacks-list');
                if (feedbacksList) {
                    result.data.feedbacks.forEach(feedback => {
                        const feedbackElement = createFeedbackElement(feedback);
                        feedbacksList.appendChild(feedbackElement);
                    });

                    // Ẩn nút "Xem thêm" nếu đã load hết
                    if (result.data.feedbacks.length < 10) {
                        const loadMoreBtn = document.querySelector('[onclick="loadMoreFeedbacks()"]');
                        if (loadMoreBtn) {
                            loadMoreBtn.style.display = 'none';
                        }
                    }
                }
            } else {
                showToast('Không có thêm đánh giá nào', 'info');
            }
        } catch (error) {
            console.error('Error loading more feedbacks:', error);
            showToast('Có lỗi xảy ra khi tải đánh giá', 'error');
        } finally {
            const button = document.querySelector('[onclick="loadMoreFeedbacks()"]');
            if (button) {
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-arrow-down"></i> Xem thêm đánh giá';
            }
        }
    };

    // Hàm tạo element đánh giá
    function createFeedbackElement(feedback) {
        const div = document.createElement('div');
        div.className = 'feedback-item mb-3 p-3 border rounded';
        
        const stars = '★'.repeat(feedback.rating) + '☆'.repeat(5 - feedback.rating);
        
        div.innerHTML = `
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="d-flex align-items-center">
                    <div class="student-avatar me-2">
                        <i class="bi bi-person-circle text-primary fs-4"></i>
                    </div>
                    <div>
                        <strong class="d-block">${feedback.student_name}</strong>
                        <small class="text-muted">${new Date(feedback.created_at).toLocaleString('vi-VN')}</small>
                    </div>
                </div>
                <div class="stars">
                    ${Array(feedback.rating).fill('<i class="bi bi-star-fill text-warning"></i>').join('')}
                    ${Array(5 - feedback.rating).fill('<i class="bi bi-star text-muted"></i>').join('')}
                </div>
            </div>
            <p class="mb-0">${feedback.feedback}</p>
        `;
        
        return div;
    }
});
</script>

<style>
