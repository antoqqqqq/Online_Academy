{{!-- Danh sách khóa học yêu thích --}}
<div class="container py-2 mt-0">
    {{!-- Header Section với gradient --}}
    <div class="row mb-2">
        <div class="col-12">
            <div class="watchlist-header text-center py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; color: white;">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="bi bi-heart-fill me-2"></i>
                    Danh Sách Yêu Thích
                </h1>
                <p class="mb-0">Bạn có <span class="badge bg-light text-dark px-2 py-1">{{total}}</span> khóa học trong danh sách yêu thích</p>
            </div>
        </div>
    </div>

    {{#if courses}}
    {{#if (eq courses.length 0)}}
    {{!-- Empty State - Modern Design --}}
    <div class="row">
        <div class="col-12">
            <div class="empty-state-card text-center py-5">
                <div class="empty-icon mb-4">
                    <i class="bi bi-heart fs-1" style="font-size: 5rem; color: #ddd;"></i>
                </div>
                <h3 class="text-dark mb-3">Danh sách yêu thích trống</h3>
                <p class="text-muted mb-4">Bạn chưa thêm khóa học nào vào danh sách yêu thích.</p>
                <a href="/" class="btn btn-lg btn-primary px-5">
                    <i class="bi bi-house-fill me-2"></i>
                    Khám phá khóa học
                </a>
            </div>
        </div>
    </div>
    {{else}}
    {{!-- Danh sách khóa học - Modern Card Design --}}
    <div class="row g-4">
        {{#each courses}}
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card course-card-modern h-100 position-relative shadow-sm">
                {{!-- Nút xóa với hover effect --}}
                <button class="btn-remove-icon position-absolute top-0 end-0 m-3 btn-remove-watchlist" 
                        data-course-id="{{this.course_id}}"
                        title="Xóa khỏi danh sách yêu thích">
                    <i class="bi bi-x-circle-fill"></i>
                </button>

                {{!-- Course Image --}}
                <div class="course-image-wrapper position-relative overflow-hidden" style="height: 180px;">
                    <img src="{{this.image_url}}" class="card-img-top w-100 h-100" 
                         alt="{{this.title}}" 
                         style="object-fit: cover; transition: transform 0.3s ease;"
                         onerror="this.src='/static/default/default-course.jpg'">
                    <div class="position-absolute bottom-0 start-0 end-0 p-2" style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);">
                        <span class="badge bg-primary">{{this.category_name}}</span>
                    </div>
                </div>
                
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title fw-bold mb-2 text-truncate-2" style="min-height: 48px;" title="{{this.title}}">
                        {{this.title}}
                    </h6>
                    
                    {{!-- Instructor --}}
                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="fas fa-chalkboard-teacher"></i> {{this.instructor_name}}
                        </small>
                    </div>
                    
                    {{!-- Rating --}}
                    <div class="d-flex align-items-center mb-2">
                        <div class="rating-badge">
                            <i class="fas fa-star text-warning"></i>
                            <span class="fw-bold ms-1">{{this.rating}}</span>
                            <small class="text-muted ms-1">({{this.total_reviews}})</small>
                        </div>
                    </div>
                    
                    {{!-- Price --}}
                    <div class="price-badge mb-3 mt-auto">
                        {{#if this.discount_price}}
                        <span class="text-decoration-line-through text-muted small">{{format_money this.current_price}}</span>
                        <span class="text-danger fw-bold ms-2">{{format_money this.discount_price}}</span>
                        {{else}}
                        <span class="text-primary fw-bold fs-5">{{format_money this.current_price}}</span>
                        {{/if}}
                    </div>
                </div>
                
                <div class="card-footer bg-transparent border-top-0 p-3">
                    <a href="/courses/{{this.course_id}}" class="btn btn-primary w-100">
                        <i class="bi bi-eye me-2"></i> Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- Pagination --}}
    {{#if pagination}}
    {{#if (eq pagination.totalPages 1)}}
    {{!-- Không hiển thị pagination nếu chỉ có 1 trang --}}
    {{else}}
    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center">
            {{#if pagination.hasPrev}}
            <li class="page-item">
                <a class="page-link" href="/courses/watchlist?page={{subtract pagination.currentPage 1}}">
                    <i class="bi bi-chevron-left"></i> Trước
                </a>
            </li>
            {{/if}}

            {{#each pagination.pages}}
            <li class="page-item {{#if this.isCurrent}}active{{/if}}">
                <a class="page-link" href="/courses/watchlist?page={{this.value}}">
                    {{this.value}}
                </a>
            </li>
            {{/each}}

            {{#if pagination.hasNext}}
            <li class="page-item">
                <a class="page-link" href="/courses/watchlist?page={{add pagination.currentPage 1}}">
                    Tiếp <i class="bi bi-chevron-right"></i>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
    {{/if}}
    {{/if}}
    {{/if}}
    {{else}}
    {{!-- Trường hợp lỗi hoặc không có data --}}
    <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle fs-1"></i>
        <h4 class="mt-3">Không thể tải danh sách</h4>
        <p>Vui lòng thử lại sau.</p>
    </div>
    {{/if}}
</div>

{{!-- JavaScript xử lý xóa khỏi watchlist --}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const removeButtons = document.querySelectorAll('.btn-remove-watchlist');
    
    removeButtons.forEach(button => {
        button.addEventListener('click', async function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const courseId = this.dataset.courseId;
            const card = this.closest('.col-lg-3, .col-md-4, .col-sm-6');
            
            // Confirm
            if (!confirm('Bạn có chắc muốn xóa khóa học này khỏi danh sách yêu thích?')) {
                return;
            }
            
            try {
                // Disable button
                button.disabled = true;
                button.innerHTML = '<i class="bi bi-hourglass-split"></i>';
                
                // Gọi API toggle (sẽ xóa vì đã có trong watchlist)
                const response = await fetch(`/courses/${courseId}/watchlist/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Animate và xóa card
                    card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.8)';
                    
                    setTimeout(() => {
                        card.remove();
                        
                        // Kiểm tra nếu không còn khóa học nào
                        const remainingCourses = document.querySelectorAll('.course-card-modern');
                        if (remainingCourses.length === 0) {
                            // Reload page để hiển thị empty state
                            window.location.reload();
                        }
                    }, 300);
                    
                    showToast(data.message, 'success');
                } else {
                    button.disabled = false;
                    button.innerHTML = '<i class="bi bi-x-lg"></i>';
                    showToast(data.message, 'error');
                }
            } catch (error) {
                console.error('Lỗi:', error);
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-x-lg"></i>';
                showToast('Có lỗi xảy ra, vui lòng thử lại', 'error');
            }
        });
    });
    
    // Hàm hiển thị toast notification
    function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 start-50 translate-middle-x mt-3`;
        toast.style.zIndex = '9999';
        toast.textContent = message;
        
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.remove();
        }, 3000);
    }
});
</script>

<style>
