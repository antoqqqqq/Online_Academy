{{!-- Danh sách đánh giá của học viên --}}
<div class="container py-2 mt-0">
    {{!-- Header với gradient --}}
    <div class="row mb-2">
        <div class="col-12">
            <div class="my-feedback-header text-center py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; color: white;">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="bi bi-star-fill me-2"></i>
                    Đánh Giá Của Tôi
                </h1>
                <p class="mb-0">Quản lý các đánh giá khóa học của bạn</p>
            </div>
        </div>
    </div>

    {{!-- Stats với gradient --}}
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stats-card-primary text-white shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px;">
                <div class="card-body text-center py-4">
                    <h2 class="fw-bold mb-2">{{total}}</h2>
                    <p class="mb-0 fw-bold">Tổng đánh giá</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card-success text-white shadow-sm" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 12px;">
                <div class="card-body text-center py-4">
                    <h2 class="fw-bold mb-2">{{#if feedbacks}}{{feedbacks.length}}{{else}}0{{/if}}</h2>
                    <p class="mb-0 fw-bold">Trang này</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card stats-card-info text-white shadow-sm" style="background: linear-gradient(135deg, #0dcaf0 0%, #0d6efd 100%); border-radius: 12px;">
                <div class="card-body text-center py-4">
                    <h5 class="fw-bold mb-1">Trang {{pagination.currentPage}} / {{pagination.totalPages}}</h5>
                    <p class="mb-0">Hiển thị {{feedbacks.length}} đánh giá</p>
                </div>
            </div>
        </div>
    </div>

    {{!-- Feedback List --}}
    {{#if feedbacks}}
        <div class="row">
            {{#each feedbacks}}
            <div class="col-lg-6 mb-4">
                <div class="card feedback-card h-100 shadow-sm">
                    {{!-- Course Info --}}
                    <div class="card-header p-3 border-bottom">
                        <div class="row align-items-center g-3">
                            <div class="col-auto">
                                <img src="{{this.course_image}}" 
                                     alt="{{this.course_title}}" 
                                     class="rounded shadow-sm" 
                                     style="width: 70px; height: 70px; object-fit: cover;"
                                     onerror="this.src='/static/default/default-course.jpg'">
                            </div>
                            <div class="col">
                                <h6 class="mb-1 fw-bold">
                                    <a href="/courses/{{this.course}}" class="text-decoration-none text-dark">
                                        {{this.course_title}}
                                    </a>
                                </h6>
                                <small class="text-muted d-block">
                                    <i class="bi bi-person me-1"></i>{{this.instructor_name}}
                                </small>
                                <small class="text-muted">
                                    <i class="bi bi-tag me-1"></i>{{this.category_name}}
                                </small>
                            </div>
                        </div>
                    </div>

                    {{!-- Rating & Comment --}}
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="stars me-3" style="font-size: 1.3rem;">
                                {{#times this.rating}}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {{/times}}
                                {{#times (subtract 5 this.rating)}}
                                    <i class="bi bi-star text-muted"></i>
                                {{/times}}
                            </div>
                            <span class="badge px-3 py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                {{this.rating}} sao
                            </span>
                            <small class="text-muted ms-auto">
                                <i class="bi bi-clock me-1"></i>{{format_datetime this.created_at}}
                            </small>
                        </div>

                        {{!-- Comment --}}
                        <div class="feedback-comment mb-3 p-3" style="background: #f8f9fa; border-radius: 8px; border-left: 4px solid #667eea;">
                            <p class="mb-0 lh-base">{{this.feedback}}</p>
                        </div>

                        {{!-- Actions --}}
                        <div class="d-flex gap-2">
                            <a href="/courses/{{this.course}}" class="btn btn-primary btn-sm flex-fill">
                                <i class="bi bi-eye me-1"></i> Xem khóa học
                            </a>
                            <a href="/feedback/{{this.course}}" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil me-1"></i> Sửa
                            </a>
                            <button class="btn btn-outline-danger btn-sm" onclick="deleteFeedback({{this.id}}, {{this.course}})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        {{!-- Pagination --}}
        {{#if pagination.totalPages}}
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                {{#if pagination.hasPrev}}
                <li class="page-item">
                    <a class="page-link" href="?page={{subtract pagination.currentPage 1}}">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                </li>
                {{/if}}

                {{#times pagination.totalPages}}
                <li class="page-item {{#if (eq this ../pagination.currentPage)}}active{{/if}}">
                    <a class="page-link" href="?page={{this}}">{{this}}</a>
                </li>
                {{/times}}

                {{#if pagination.hasNext}}
                <li class="page-item">
                    <a class="page-link" href="?page={{add pagination.currentPage 1}}">
                        Tiếp <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {{/if}}
            </ul>
        </nav>
        {{/if}}
    {{else}}
        {{!-- Empty State --}}
        <div class="text-center py-5">
            <div class="empty-state-card" style="background: white; border-radius: 15px; box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08); padding: 60px 30px;">
                <div class="mb-4">
                    <i class="bi bi-star text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
                </div>
                <h3 class="text-dark mb-3">Chưa có đánh giá nào</h3>
                <p class="text-muted mb-4">
                    Bạn chưa đánh giá khóa học nào. Hãy đăng ký và học một khóa học để có thể đánh giá!
                </p>
                <a href="/courses" class="btn btn-lg px-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white;">
                    <i class="bi bi-book me-2"></i> Khám phá khóa học
                </a>
            </div>
        </div>
    {{/if}}
</div>

{{!-- JavaScript --}}
<script>
// Delete feedback function
async function deleteFeedback(feedbackId, courseId) {
    if (!confirm('Bạn có chắc chắn muốn xóa đánh giá này?')) {
        return;
    }

    try {
        const response = await fetch(`/feedback/${courseId}/${feedbackId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const result = await response.json();

        if (result.success) {
            showToast(result.message, 'success');
            // Reload page after 1.5 seconds
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            if (result.requireLogin) {
                window.location.href = '/account/signin';
            } else {
                showToast(result.message, 'error');
            }
        }
    } catch (error) {
        console.error('Error:', error);
        showToast('Có lỗi xảy ra, vui lòng thử lại', 'error');
    }
}

// Toast notification function
function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 start-50 translate-middle-x mt-3`;
    toast.style.zIndex = '9999';
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}
</script>

